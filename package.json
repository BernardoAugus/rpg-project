{
  "name": "rpg-backend",
  "version": "1.0.0",
  "description": "Backend RPG usando Node.js, TypeScript, TypeORM e DDD",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate src/infrastructure/db/migrations/AutoMigration -d src/infrastructure/db/data-source.ts",
    "migrate:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/infrastructure/db/data-source.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.2",
    "express": "^4.21.2",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.23",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.44",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}